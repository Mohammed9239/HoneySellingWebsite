@model IEnumerable<honey.Areas.Admin.Models.Product>

@{
    ViewData["Title"] = "جميع المنتجات";
}
<style>
    .navbar {
        box-shadow: 0px 7px 30px rgb(0 0 0 / 8%);
    }
</style>


<section class="trending-product section" style="margin-top: 10px;">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h2>تسوق جميع انواع العسل</h2>
                </div>
            </div>
        </div>
        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 col-12">
                    <!-- Start Single Product -->
                    <div class="single-product">
                        <div class="product-image">
                            <img src="~/Uploads/@item.Images.FirstOrDefault(i=>i.Url.StartsWith("fav")).Url" alt="#">
                            <div class="button">
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@item.ID" class="btn btn-primary" style="width: 100%;"><i class="fa fa-opencart"></i>  طلب</a>
                            </div>
                        </div>
                        <div class="product-info">
                            <h4 class="title">
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.Name)</a>
                            </h4>
                            <div class="price">
                                <span>@Html.DisplayFor(modelItem => item.Price)</span>
                            </div>
                        </div>
                    </div>
                    <!-- End Single Product -->
                </div>
            }

            <div class="col-lg-12 f-r">
                <partial name="_Pager1" />
            </div>
        </div>
    </div>
</section>